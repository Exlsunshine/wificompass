<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calibrator_LinearLayout01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:stretchColumns="1,3" android:padding="5dp">

        <TableRow android:layout_width="match_parent">
            
    <TextView
        android:id="@+id/calibrator_tvPeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibrator_tv_peak" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
    </TextView>

    <SeekBar
        android:id="@+id/calibrator_sbPeak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="18" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
    </SeekBar>

    
    <TextView
        android:id="@+id/calibrator_tvFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibrator_tv_filter" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
    </TextView>

    <SeekBar
        android:id="@+id/calibrator_sbFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="75"
        android:progress="60" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
    </SeekBar>
</TableRow>

<TableRow android:layout_width="match_parent" >

    <TextView
        android:id="@+id/calibrator_tvTimeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibrator_tv_step_timeout" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
    </TextView>

    <SeekBar
        android:id="@+id/calibrator_sbTimeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000"
        android:progress="500" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
    </SeekBar>

    <TextView
        android:id="@+id/calibrator_tv_step_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibrator_tv_step_size" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
    </TextView>

    <SeekBar
        android:id="@+id/calibrator_step_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="150"
        android:progress="70" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
    </SeekBar>
    
    </TableRow>
    
    </TableLayout>

    <SurfaceView
        android:id="@+id/calibrator_svHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp" >
    </SurfaceView>

</LinearLayout>