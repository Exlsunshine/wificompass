<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.fhstp.wificompass"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-feature
        android:name="android.hardware.wifi"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.sensor.accelerometer"/>
    <uses-feature android:name="android.hardware.sensor.gyroscope"/>
    <uses-feature android:name="android.hardware.sensor.compass"/>

  
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:name=".activities.MainActivity"
            android:screenOrientation="fullSensor" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="@string/project"
            android:name=".activities.ProjectActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="@string/wifi_scan"
            android:name=".activities.SampleScanActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="@string/about"
            android:name=".activities.AboutActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="@string/filebrowser_label"
            android:name="at.woelfel.philip.filebrowser.FileBrowser" >
        </activity>
        <activity android:name=".activities.ProjectListActivity" android:theme="@android:style/Theme.Dialog" android:configChanges="orientation" android:label="@string/project_list"></activity>
        <activity android:label="@string/project_location" android:name=".activities.ProjectSiteActivity" android:configChanges="orientation"></activity>
        <activity android:label="@string/sensors_label" android:name=".activities.SensorsActivity" android:configChanges="orientation"></activity>
        <activity android:label="@string/export_db_label" android:name=".activities.DBActivity" android:configChanges="orientation"></activity>
        <activity android:name=".activities.PreferencesActivity" android:configChanges="orientation" android:theme="@android:style/Theme.Dialog" android:label="@string/preferences_activity"></activity>
        <activity android:name="de.uvwxy.footpath.gui.Calibrator" android:label="@string/calibrator_label" android:configChanges="orientation"></activity>
    </application>

</manifest>